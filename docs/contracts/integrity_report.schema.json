{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/contracts/integrity_report.schema.json",
  "title": "IntegrityReport",
  "description": "Result of a data/state integrity check, optionally linked to the triggering audit event.",
  "type": "object",
  "required": ["report_id", "target", "passed", "checked_at"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "report_id": {
      "type": "string",
      "format": "uuid"
    },
    "target": {
      "type": "string",
      "minLength": 1
    },
    "passed": {
      "type": "boolean"
    },
    "violations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "triggering_event": {
      "$ref": "https://profinaut.local/schemas/contracts/audit_event.schema.json"
    },
    "checked_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
