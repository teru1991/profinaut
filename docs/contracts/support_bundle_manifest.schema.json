{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/contracts/support_bundle_manifest.schema.json",
  "title": "SupportBundleManifest",
  "description": "Index of files included in a support bundle archive.",
  "type": "object",
  "required": ["bundle_id", "created_at", "files"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "bundle_id": {
      "type": "string",
      "format": "uuid"
    },
    "description": {
      "type": "string"
    },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "size_bytes"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "sha256": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
