{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/contracts/startup_report.schema.json",
  "title": "StartupReport",
  "description": "Self-diagnostic report emitted by a service at startup.",
  "type": "object",
  "required": ["report_id", "service", "version", "status", "started_at"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "report_id": {
      "type": "string",
      "format": "uuid"
    },
    "service": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["OK", "DEGRADED", "FAILED"]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "passed"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "passed": { "type": "boolean" },
          "message": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
