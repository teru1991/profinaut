{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/contracts/replay_pointers.schema.json",
  "title": "ReplayPointers",
  "description": "Set of offset/timestamp markers used to resume or replay a data stream.",
  "type": "object",
  "required": ["session_id", "source", "pointers"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "session_id": {
      "type": "string",
      "format": "uuid"
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "pointers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["offset", "timestamp"],
        "properties": {
          "offset": { "type": "integer", "minimum": 0 },
          "timestamp": { "type": "string", "format": "date-time" },
          "label": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
