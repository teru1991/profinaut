{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/module_run.schema.json",
  "title": "ModuleRun",
  "type": "object",
  "required": [
    "run_id",
    "module_id",
    "trigger_type",
    "status",
    "started_at"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "format": "uuid"
    },
    "module_id": {
      "type": "string",
      "format": "uuid"
    },
    "trigger_type": {
      "type": "string",
      "enum": ["MANUAL", "SCHEDULE"]
    },
    "status": {
      "type": "string",
      "enum": ["QUEUED", "RUNNING", "SUCCEEDED", "FAILED", "CANCELED"]
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "ended_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "default": null
    },
    "summary": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "default": null
    }
  },
  "additionalProperties": false
}
