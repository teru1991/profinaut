{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/capabilities.schema.json",
  "title": "CapabilitiesResponse",
  "type": "object",
  "required": [
    "service",
    "version",
    "status",
    "features",
    "degraded_reason",
    "generated_at"
  ],
  "properties": {
    "service": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "degraded"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "degraded_reason": {
      "type": [
        "string",
        "null"
      ]
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
