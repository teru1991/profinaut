{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/module.schema.json",
  "title": "Module",
  "type": "object",
  "required": [
    "module_id",
    "name",
    "enabled",
    "execution_mode",
    "config",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "module_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": ["string", "null"],
      "default": null
    },
    "enabled": {
      "type": "boolean"
    },
    "execution_mode": {
      "type": "string",
      "enum": ["MANUAL", "SCHEDULED", "MANUAL_AND_SCHEDULED"]
    },
    "schedule_cron": {
      "type": ["string", "null"],
      "default": null
    },
    "config": {
      "type": "object",
      "additionalProperties": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
