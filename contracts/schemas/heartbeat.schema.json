{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://profinaut.local/schemas/heartbeat.schema.json",
  "title": "Heartbeat",
  "type": "object",
  "required": [
    "instance_id",
    "bot_id",
    "runtime_mode",
    "exchange",
    "symbol",
    "version",
    "timestamp"
  ],
  "properties": {
    "instance_id": {
      "type": "string",
      "minLength": 1
    },
    "bot_id": {
      "type": "string",
      "minLength": 1
    },
    "runtime_mode": {
      "type": "string",
      "enum": ["LIVE", "PAPER", "BACKTEST", "COLLECTOR"]
    },
    "exchange": {
      "type": "string",
      "minLength": 1
    },
    "symbol": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  },
  "additionalProperties": false
}
